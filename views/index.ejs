<% include partials/header.ejs %>

<div class="row">
	<div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
		<div id="success" class="alert alert-success" <% if (noMessage) { %> hidden <% } %>>
			<%= successMsg %>
		</div>
	</div>
</div>

	<div class="container">
	<% include layouts/layouts.ejs %>

		<div class="row">
		  <% products.forEach(function(products) { %>
		    <div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			      <img src="<%= products.imagePath %>" 
			      alt="..." class="img-responsive">
			      <div class="caption">
			        <h3 class="title"><%= products.title %></h3>
			        <p class="description"><%= products.description %></p>
			        <div class="clearfix">
			        	<div class="price pull-left">$<%= products.price %></div>
			        	<a href="/add-to-cart/<%=products._id%>" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
			        	</div>
			    	</div>
			  	</div>
			</div>
		  <% }); %>
		</div>
	</div>






